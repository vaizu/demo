<%= form_with(model: setting) do |form| %>
  <% if setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

      <ul>
        <% setting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :"ログインID" %></br>
    <%= form.text_field :login_id %>
  </div>

  <div class="field">
    <%= form.label :"ログインPASS" %></br>
    <%= form.text_field :login_pass %>
  </div>

  <div class="field">
    <%= form.label :"TEL（集客用）" %></br>
    <%= form.number_field :customer_tel %>
  </div>

  <div class="field">
    <%= form.label :"TEL（求人用）" %></br>
    <%= form.number_field :recruiting_tel %>
  </div>

  <div class="field">
    <%= form.label :メールアドレス %></br>
    <%= form.text_field :mail %>
  </div>

  <div class="field">
    <%= form.label :営業開始時間 %></br>
    <%= form.text_field :opening %>
  </div>

  <div class="field">
    <%= form.label :営業終了時間 %></br>
    <%= form.text_field :closing %>
  </div>

  <div class="field">
    <%= form.label :予約可能時間 %></br>
    <%= form.text_field :reserve %>
  </div>

  <div class="field">
    <%= form.label :定休日 %></br>
    <%= form.select(:holiday, ["定休日なし", "日曜日", "月曜日", "火曜日", "水曜日", "木曜日", "金曜日", "土曜日"]) %>
  </div>

  <div class="field">
    <%= form.label :最寄り駅情報 %></br>
    <%= form.text_field :nearest %>
  </div>

  <div class="field">
    <%= form.label :住所 %></br>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <div>
      <%= form.label :出張 %>
      <div>
        <%= form.radio_button :business_trip, false %>
        <%= form.label :business_trip, 'なし', value: false %>
        <%= form.radio_button :business_trip, true %>
        <%= form.label :business_trip, 'あり', value: true %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= form.label :キャストの呼び名 %></br>
    <%= form.text_field :cast_ja %>
  </div>

  <div class="field">
    <%= form.label :"キャストの呼び名(英語表記)" %></br>
    <%= form.text_field :cast_en %>
  </div>

  <div class="actions">
    <%= form.submit "変更する", class: "btn btn-info col-sm-1" %>
  </div>
<% end %>
